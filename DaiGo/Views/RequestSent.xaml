<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="DaiGo.View.RequestSent">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackLayout Grid.Row="0" BackgroundColor="{StaticResource userThemeColor}" VerticalOptions="FillAndExpand" HorizontalOptions="Fill">

                <ContentView Padding="80, 40, 80, 40">
                    <Image Source="DaiGo_Logo.png" VerticalOptions="Start" />
                </ContentView>

            </StackLayout>

            <StackLayout Grid.Row="1" Orientation="Vertical" Padding="40">
                <Label Style="{StaticResource H1}" Text="We will be in touch with all appropriate agents" />
                <Button Text="GO HOME" Margin="50,0,50,0" Style="{StaticResource secondaryButton}" Command="{Binding OpenWebCommand}" VerticalOptions="EndAndExpand" />
            </StackLayout>

        </Grid>
    </ContentPage.Content>
</ContentPage>
