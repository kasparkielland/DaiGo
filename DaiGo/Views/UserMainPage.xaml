<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="DaiGo.View.UserMainPage"
    BackgroundColor="{StaticResource backgroundColor}"
    Title="User Main Page">

    <Grid Margin="0, 35, 0, 10">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*" />
            <RowDefinition Height="0.25*" />
            <RowDefinition Height="0.25*" />
            <RowDefinition Height="0.6*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="0.5*" />
        </Grid.ColumnDefinitions>
        <!--<Label
            Margin="20, 0, 20, 0"
            Grid.Row="0"
            Grid.Column="0"
            Text="&#xf2bd;"
            FontFamily="{StaticResource FontAwesomeSolid}"
            TextColor="{StaticResource userThemeColor}"
            FontSize="40"
            HorizontalOptions="Start"
            VerticalOptions="Center"
            >
        </Label>-->

        <ImageButton
            Margin="20, 0, 20, 0"
            Grid.Row="0"
            Grid.Column="0"
            HorizontalOptions="Start"
            VerticalOptions="Center"
            Clicked="OnProfileIconButtonClicked">
            <ImageButton.Source>
                <FontImageSource
                    FontFamily="{StaticResource FontAwesomeSolid}"
                    Glyph="&#xf2bd;"
                    Size="44"
                    Color="{StaticResource userThemeColor}" />
            </ImageButton.Source>
        </ImageButton>
        <ImageButton
            Margin="20, 0, 20, 0"
            Grid.Row="0"
            Grid.Column="2"
            HorizontalOptions="End"
            VerticalOptions="Center"
            Clicked="OnMessageIconButtonClicked">
            <ImageButton.Source>
                <FontImageSource
                    FontFamily="{StaticResource FontAwesomeSolid}"
                    Glyph="&#xf01c;"
                    Size="44"
                    Color="{StaticResource userThemeColor}" />
            </ImageButton.Source>
        </ImageButton>
        <Label
            Margin="50, 0, 50, 0"
            Grid.Row="1"
            Grid.ColumnSpan="3"
            HorizontalOptions="CenterAndExpand"
            VerticalOptions="CenterAndExpand"
            Text="Good morning, Mr. Obama"
            FontSize="Title"
            TextColor="{StaticResource darkTextColor}"
            LineBreakMode="WordWrap" />
        <Frame
            Margin="20, 0, 20, 0"
            Grid.Row="2"
            Grid.ColumnSpan="3"
            BackgroundColor="{StaticResource userThemeColor}"
            CornerRadius="50"
            HasShadow="False">
            <Frame.GestureRecognizers>
                <TapGestureRecognizer
                    Tapped="OnQuickAccessFrameClicked" />
            </Frame.GestureRecognizers>
            <StackLayout>
                <Label
                    Margin="50, 0, 70, 0"
                    Grid.Row="1"
                    Grid.ColumnSpan="3"
                    HorizontalOptions="CenterAndExpand"
                    VerticalOptions="CenterAndExpand"
                    Text="You are up to date!"
                    FontSize="Title"
                    LineBreakMode="WordWrap"
                    TextColor="{StaticResource lightTextColor}" />
            </StackLayout>
        </Frame>
        <Frame
            x:Name="backgroundTab"
            Margin="0, 100, 0, -100"
            Grid.Row="3"
            Grid.ColumnSpan="3"
            BackgroundColor="{StaticResource userThemeColor}"
            CornerRadius="50">
            <StackLayout>
                <Entry
                    Style="{StaticResource entryField}"
                    Margin="10, 0, 10, 40"
                    Grid.Row="2"
                    Grid.ColumnSpan="3"
                    VerticalOptions="Center"
                    HorizontalOptions="CenterAndExpand"
                    HeightRequest="50"
                    WidthRequest="1000"
                    Placeholder="What are you looking for?"
                    Keyboard="Text"
                    ReturnType="Search"
                    Completed="OnSearchButtonClicked" />
                <Button
                    Margin="90, 0, 90, 100"
                    VerticalOptions="EndAndExpand"
                    Style="{StaticResource primaryButton}"
                    Text="SEARCH"
                    CornerRadius="25"
                    Clicked="OnSearchButtonClicked" />
            </StackLayout>
        </Frame>
    </Grid>
</ContentPage>
