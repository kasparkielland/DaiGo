<?xml version="1.0" encoding="utf-8" ?>
<ContentPage NavigationPage.HasNavigationBar="False"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ViewModels="clr-namespace:DaiGo.ViewModels"
             mc:Ignorable="d"
             x:Class="DaiGo.Views.UserLoginPage"
             BackgroundColor="{StaticResource backgroundColor}">

    <ContentPage.BindingContext>
        <ViewModels:UserLoginViewModel />
    </ContentPage.BindingContext>

    <Grid Margin="0, 35, 0, 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="55*" />
            <RowDefinition Height="45*" />
        </Grid.RowDefinitions>
        <Frame Margin="0, -100, 0, 100"
               BackgroundColor="{StaticResource userThemeColor}"
               CornerRadius="30">
            <StackLayout Grid.Row="0"
                         Margin="20, 100, 20, 0"
                         VerticalOptions="FillAndExpand">
                <StackLayout Orientation="Horizontal">
                    <Label Text="Login"
                           Style="{StaticResource H1}"
                           VerticalOptions="EndAndExpand"
                           TextColor="{StaticResource lightTextColor}"
                           TextDecorations="Underline" />
                    <StackLayout Orientation="Vertical"
                                 HorizontalOptions="EndAndExpand">
                        <Label Text="Welcome to"
                               VerticalOptions="CenterAndExpand"
                               HorizontalOptions="End"
                               Style="{StaticResource H1}"
                               TextColor="{StaticResource darkTextColor}" />
                        <Label Text="DaiGo"
                               VerticalOptions="CenterAndExpand"
                               HorizontalOptions="End"
                               TextColor="{StaticResource darkTextColor}"
                               Style="{StaticResource H1}"
                               FontAttributes="Bold" />
                    </StackLayout>
                </StackLayout>
                <Entry x:Name="usernameEntry"
                       Placeholder="Username"
                       Margin="0, 20, 0, 0"
                       BackgroundColor="{StaticResource backgroundColor}"
                       PlaceholderColor="{StaticResource darkTextColor}"
                       TextColor="{StaticResource darkTextColor}"
                       Text="{Binding Username, Mode = TwoWay}"
                       TabIndex="1" />
                <Entry x:Name="passwordEntry"
                       Placeholder="Password"
                       Margin="0, 20, 0, 0"
                       IsPassword="True"
                       BackgroundColor="{StaticResource backgroundColor}"
                       TextColor="{StaticResource darkTextColor}"
                       PlaceholderColor="{StaticResource darkTextColor}"
                       Text="{Binding Password, Mode = TwoWay}"
                       TabIndex="2" />
                <Label Text="Forgot password?"
                       TextColor="{StaticResource lightTextColor}"
                       FontSize="Micro"
                       HorizontalOptions="End">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding executeForgotPassword}" />
                    </Label.GestureRecognizers>

                </Label>
                <StackLayout Orientation="Horizontal"
                             HorizontalOptions="Center"
                             VerticalOptions="EndAndExpand">
                    <Button Text="SIGNUP"
                            WidthRequest="150"
                            Style="{StaticResource primaryButton}"
                            CornerRadius="25"
                            Command="{Binding executeSignUp}" />
                    <Button Text="LOGIN"
                            WidthRequest="150"
                            Style="{StaticResource secondaryButton}"
                            CornerRadius="25"
                            Command="{Binding executeLogin}" />
                </StackLayout>
            </StackLayout>
        </Frame>

        <StackLayout Grid.Row="1"
                     HorizontalOptions="Center">
            <Label Margin="10, 0, 10, 0"
                   Text="Do you know that you will save up to 70% if you are buying from the right agent in the right market?"
                   HorizontalTextAlignment="Center"
                   Style="{StaticResource H2}"
                   TextColor="{StaticResource darkTextColor}" />
            <Label Text="It is as easy as 1, 2, 3..."
                   TextColor="{StaticResource darkTextColor}"
                   Style="{StaticResource H2}"
                   HorizontalTextAlignment="Center"
                   VerticalOptions="EndAndExpand" />
            <Label Text="DaiGo"
                   Style="{StaticResource H1}"
                   TextColor="{StaticResource userThemeColor}"
                   VerticalOptions="EndAndExpand"
                   HorizontalTextAlignment="Center"
                   HorizontalOptions="Center"
                   Margin="0, 0, 0, 50" />
        </StackLayout>
    </Grid>
</ContentPage>